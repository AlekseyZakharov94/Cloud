<VBox fx:controller="com.AlekseyZakharov.Cloud_Client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы" onAction="#btnExitAction"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include source="cloudPanel.fxml" fx:id="clientPanel" HBox.hgrow="ALWAYS"/>
        <fx:include source="cloudPanel.fxml" fx:id="cloudPanel" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox>
        <Button text="Копирование" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Перемещение" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Удаление" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Выход из программы" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#btnExitAction"/>
    </HBox>
</VBox>